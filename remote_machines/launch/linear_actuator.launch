<launch>

  <include file="$(find pandora_launchers)/remote_machines/machine/rpi2.machine" />

  <!-- Linear Motor Hardware Interface Node -->
  <rosparam
    command="load"
    file="$(find pandora_linear_motor_hardware_interface)/linear_motor_hardware_interface/config/linear_motor_hardware_interface.yaml"
    ns="/linear" />

  <node
    machine="rpi2"
    name="linear_motor_hardware_interface_node"
    pkg="pandora_linear_motor_hardware_interface"
    type="linear_motor_hardware_interface_node"
    output="screen"
    ns="/linear">

    <remap
      to="/linear_elevator_controller/command"
      from="/linear/linear_elevator_controller_command" />
  </node>

  <node
    machine="rpi2"
    name="linear_motor_controller_spawner"
    pkg="controller_manager"
    type="controller_manager"
    ns="/linear"
    args="
      spawn
      joint_state_controller
      linear_elevator_controller">
    <remap
      from="/linear/linear_elevator_controller/command"
      to="/linear_elevator_controller/command" />
  </node>
</launch>
